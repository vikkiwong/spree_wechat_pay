<fieldset data-hook="wechatpay">
  <legend align="center"><%= Spree.t(:transaction, :scope => :wechatpay) %></legend>

  <div>
    <div class="alpha six columns">
      <dl>
        <dt><%= Spree.t(:out_trade_no, :scope => :wechatpay) %>：</dt>
        <dd><%= payment.source.try(:out_trade_no) %></dd>

        <dt><%= Spree.t(:transaction_id) %>：</dt>
        <dd><%= payment.source.try(:transaction_id) %></dd>
      </dl>
    </div>
  </div>
</fieldset>